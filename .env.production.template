# Production Environment Configuration Template
# Copy this file to .env.production and update with actual values
# DO NOT commit .env.production to version control

# Database Configuration
DB_HOST=your-db-host.example.com
DB_PORT=3306
DB_NAME=mail_system_prod
DB_USER=mail_prod_user
DB_PASSWORD=ChangeThisToAStrongPassword!
DB_URL=jdbc:mysql://${DB_HOST}:${DB_PORT}/${DB_NAME}?useSSL=true&requireSSL=false&serverTimezone=UTC

# Redis Configuration
REDIS_HOST=your-redis-host.example.com
REDIS_PORT=6379
REDIS_PASSWORD=ChangeThisToAStrongRedisPassword!
REDIS_DB=0
REDIS_SSL=true

# JWT Security (Generate with: openssl rand -base64 64)
JWT_SECRET=ChangeThisToA256BitSecretKey!GenerateWithOpenSSL
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# Mail Server Configuration
MAIL_HOST=smtp.yourdomain.com
MAIL_PORT=587
MAIL_USERNAME=noreply@yourdomain.com
MAIL_PASSWORD=YourSMTPPassword
MAIL_SSL_TRUST=smtp.yourdomain.com
MAIL_DOMAIN=yourdomain.com
ALLOWED_DOMAINS=yourdomain.com,subdomain.yourdomain.com

# Mail Server Ports
SMTP_ENABLED=true
SMTP_PORT=25
SMTP_SSL_PORT=465
IMAP_ENABLED=true
IMAP_PORT=143
IMAP_SSL_PORT=993
POP3_ENABLED=true
POP3_PORT=110
POP3_SSL_PORT=995

# Mail Storage
MAIL_STORAGE_PATH=/var/mail/storage
MAX_MAILBOX_SIZE=1073741824
MAX_MESSAGE_SIZE=26214400

# Mail Security
DKIM_ENABLED=true
SPF_ENABLED=true
DMARC_ENABLED=true
SPAM_FILTER_ENABLED=true
VIRUS_SCAN_ENABLED=true

# Server Configuration
SERVER_PORT=8080
SSL_ENABLED=false
SSL_KEYSTORE=/path/to/keystore.p12
SSL_KEYSTORE_PASSWORD=YourKeystorePassword
SSL_KEYSTORE_TYPE=PKCS12

# Connection Pool
DB_POOL_SIZE=50
DB_MIN_IDLE=10
SMTP_MAX_CONN=200
IMAP_MAX_CONN=100
POP3_MAX_CONN=50

# CORS Configuration
CORS_ORIGINS=https://mail.yourdomain.com,https://app.yourdomain.com

# Security Settings
REQUIRE_HTTPS=true
SESSION_TIMEOUT=1800
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900
RATE_LIMIT=60

# File Upload Limits
MAX_FILE_SIZE=25MB
MAX_REQUEST_SIZE=30MB

# Logging
LOG_PATH=/var/log/mail-system

# API Documentation (Disable in production)
API_DOCS_ENABLED=false
SWAGGER_ENABLED=false

# Monitoring
PROMETHEUS_ENABLED=true

# Spring Profiles
SPRING_PROFILES_ACTIVE=prod

# Timezone
TIMEZONE=UTC

# Node Environment (for frontend)
NODE_ENV=production

# Frontend Configuration
VITE_API_BASE_URL=https://api.yourdomain.com
VITE_WEBSOCKET_URL=wss://api.yourdomain.com/ws