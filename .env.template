# 企业邮件系统 - 环境配置文件
# 请复制此文件为 .env 并修改为实际值

# 数据库配置
MYSQL_ROOT_PASSWORD=ChangeThisStrongPassword2024!
MYSQL_DATABASE=mail_system
MYSQL_USER=mailuser
MYSQL_PASSWORD=ChangeThisStrongPassword2024!

# Redis配置
REDIS_PASSWORD=ChangeThisRedisPassword2024!

# JWT配置
JWT_SECRET=ChangeThisToAVeryLongAndSecureRandomStringAtLeast256BitsForProduction2024!

# 邮件服务器配置
MAIL_HOST=localhost
MAIL_PORT=25
MAIL_USERNAME=admin@enterprise.mail
MAIL_PASSWORD=ChangeThisMailPassword2024!
MAIL_SSL_ENABLE=true

# 系统配置
SERVER_PORT=8080
FRONTEND_PORT=3000
TZ=Asia/Shanghai

# 生产环境配置
SPRING_PROFILES_ACTIVE=prod
NODE_ENV=production

# SSL证书路径（生产环境）
SSL_CERT_PATH=/etc/ssl/certs/server.crt
SSL_KEY_PATH=/etc/ssl/private/server.key

# 存储配置
STORAGE_PATH=/var/mail/storage
MAX_ATTACHMENT_SIZE=10485760
STORAGE_QUOTA_PER_USER=1073741824

# 日志配置
LOG_LEVEL=INFO
LOG_PATH=/var/log/mail-system

# 监控配置
ACTUATOR_ENABLED=true
METRICS_ENABLED=true

# 备份配置
BACKUP_PATH=/var/backup/mail-system
BACKUP_RETENTION_DAYS=30